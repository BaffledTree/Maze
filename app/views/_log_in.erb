<div class="welcome-box">
  <div class="row">
    <div class="col-md-1" ></div>
    <div class="col-md-1" ></div>
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class='panel-title'> Not a member? Sign up </h3>
        </div>
        <div class="panel-body">
          <form action="/signup" method="post">
            <div class="form-group">
              <label>Name:</label>
              <input type="text" name="name" class="form-control" >
              <br>
              <label>
              Username:
              <% if @error_signup && !@error_signup[:username].nil?%>
                <% @error_signup[:username].each do |message| %>
                  <span style="color:red">
                    <%= message %>
                  </span>
                <% end %>
              <% end %>
              </label>
              <input type="text" name="username"  class="form-control" required>
              <br>
              <label>Password:</label>
              <input type="password" name="password"  class="form-control" required>
              <br>
              <input type="submit" value="Create Account" class="btn btn-info welcome-button">
              </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="panel panel-success">
        <div class="panel-heading">
          <h3 class='panel-title'> Already a member? Log in </h3>
        </div>
        <div class="panel-body">
          <% if @error_login %>
            <span style="color: red"><%= @error_login %></span>
          <% end %>
          <form action="/login" method="post">
            <div class="form-group">
              <label>Username:</label>
              <input type="text" name="username" class="form-control" required>
              <br>
              <label>Password:</label>
              <input type="password" name="password" class="form-control" required>
              <br>
              <input type="submit" value="Log In" class="btn btn-success welcome-button">
            </div>
          </form>
        </div>
      </div>
    </div>
    <div class="col-md-1" ></div>
    <div class="col-md-1" ></div>
  </div>
</div>
